# YogaSwiss Vite Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
VITE_SUPABASE_PROJECT_ID=your-project-id

# Swiss Payment Configuration
VITE_TWINT_MERCHANT_ID=your-twint-merchant-id
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
VITE_POSTFINANCE_MERCHANT_ID=your-postfinance-id

# Application Configuration
VITE_APP_ENV=development
VITE_APP_URL=http://localhost:5173
VITE_API_BASE_URL=https://your-project-id.supabase.co/functions/v1

# Swiss Configuration
VITE_DEFAULT_CURRENCY=CHF
VITE_DEFAULT_TIMEZONE=Europe/Zurich
VITE_VAT_RATE=7.7

# Analytics (Optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id

# Map Services (Optional)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token